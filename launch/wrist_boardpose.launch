<launch>  
   
<!--   <node pkg="rviz" type="rviz" name="rviz" args="-d $(find checkerboard_detection)/launch/demo_camerapose.vcg"/>
-->
    <node pkg="checkerboard_detection" type="checkerboard_pose" name="wrist_board_pose" >
      <param name="base_frame" type="string"  value="/camera_rgb_optical_frame" />
      <param name="frame_id" type="string" value="/wrist_board"/>
      <param name="marker_ns" type="string" value="/camera_link"/>
      <param name="pose_file" value="$(find checkerboard_detection)/cfg/pose.yml" />
      <param name="read_pose_file" type="bool" value="false"/>
      <param name="service_name" type="string" value="pose" />
      <param name="draw_debug_image" type="bool" value="true"/> <!-- debug only works for publish_camera_pose = false -->
      <param name="publish_tf_link" type="bool" value="true"/>
      <param name="publish_rviz_marker" type="bool" value="true"/>
      <param name="publish_last_success" type="bool" value="false"/>
      <param name="publish_camera_pose" type="bool" value="false"/>
      <param name="use_sub_pixel" type="bool" value="false"/>
      <param name="checkerboard_width" type="int" value="3"/>
      <param name="checkerboard_height" type="int" value="4"/>
      <param name="checkerboard_box_width" type="double" value="0.049"/>
      <param name="checkerboard_box_height" type="double" value="0.049"/>
      <param name="frame_rate" value="15" />
      <param name="skip_frames" value="1" />
      <remap from="image" to="/camera/rgb/image_raw" />
      <remap from="camera_info" to="/camera/rgb/camera_info" />
    </node>
</launch>
